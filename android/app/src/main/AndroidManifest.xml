<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸŒ Permisos de ubicaciÃ³n -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:label="waxhub_v3"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- ðŸ”‘ Clave ÃšNICA del Maps SDK for Android -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBpmV9gSDHG472GUmxC0e0JbMO4jjPQJGA" />

        <!-- (Opcional - soluciona errores de red en targetSdk 34) -->
        <!--
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Tema que se muestra antes de que Flutter dibuje -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- No borrar: necesario para el registro automÃ¡tico de plugins -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>

    <!-- Visibilidad de paquetes (ProcessText plugin) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

</manifest>
